<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StickySwitch">
        <attr name="ss_leftIcon" format="reference|integer" />
        <attr name="ss_leftText" format="reference|string" />
        <attr name="ss_rightIcon" format="reference|integer" />
        <attr name="ss_rightText" format="reference|string" />
        <attr name="ss_iconSize" format="reference|dimension" />
        <attr name="ss_iconPadding" format="reference|dimension" />
        <attr name="ss_textSize" format="reference|dimension" />
        <attr name="ss_selectedTextSize" format="reference|dimension" />
        <attr name="ss_switchColor" format="reference|color" />
        <attr name="ss_sliderBackgroundColor" format="reference|color" />
        <attr name="ss_textColor" format="reference|color" />
        <attr name="ss_animationDuration" format="reference|integer" />

        <attr name="ss_animationType" format="enum">
            <enum name="line" value="0"/>
            <enum name="curved" value="1"/>
        </attr>
        <attr name="ss_textVisibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>
    </declare-styleable>
</resources>